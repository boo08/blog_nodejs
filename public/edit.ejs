<%- include('header'); -%>

<form action="<%=url+"/edit/"+blog[0].id %>" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input type="text" class="form-control" id="exampleInputEmail1" name="title" value="<%=blog[0].title %>" placeholder="Enter Title">
      
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Content</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="content" rows="3"><%=blog[0].content %></textarea>
      </div>
 
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  
  
